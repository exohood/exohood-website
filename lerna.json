{
  "command": {
    "publish": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "verifyAccess": false,
      "ignoreChanges": [
        "**/*.md",
        "**/*.spec.js",
        "**/*.yml",
        "**/*.story.js",
        "**/.storybook/**",
        "**/exohoodCssTest/**",
        "**/test/**",
        "packages/docs",
        "lerna.json",
        "**/CODEOWNERS",
        "**/.gitignore",
        ".vscode"
      ]
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent"
}
